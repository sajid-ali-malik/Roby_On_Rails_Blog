<%= form_with model: [ @article, @article.comments.build ] do
|form|%>
    <p>
        <%=form.label :commenter%>
        <%= form.text_field :commenter%>
    </p>
    
    <p>
        <%= form.label :comment%>
        <%= form.text_field :comment%>
    </p>

    <p>
        <%= form.label :status %><br>
        <%= form.select :status, Visible::VALID_STATUSES, selected: 'public' %>
    </p>

    <p>
        <%= form.submit%>
    </p>

<% end %>